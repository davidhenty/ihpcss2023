#!/bin/bash
#SBATCH --job-name=pingpong
#SBATCH --output=%x-%j.out
#SBATCH --error=%x-%j.err
#SBATCH --partition=RM
#SBATCH --reservation=ihpcssday1RM8
#SBATCH --time=00:05:00
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=2
#SBATCH --cpus-per-task=1

# Run the binary
module load openmpi
mpirun -n ${SLURM_NTASKS} ./pingpong
